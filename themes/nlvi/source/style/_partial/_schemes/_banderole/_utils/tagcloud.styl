.tagcloud-taglist
  button
    outline: 0
    background-color: transparent
    cursor: pointer
    border-radius: 12px
    padding: yard (yard*2)
    color: $theme-color-main
    font-weight: bold
    border: 1px solid
    border-color: transparent $theme-color-main transparent $theme-color-main
    transition-sign()
    &:hover
      color: #fff
      background-color $theme-color-main

.tagcloud
  display none
  position: fixed
  top: 98px
  right: 0
  bottom: 0
  left: 0
  z-index: 500
  overflow: auto
  overflow-x: hidden
  &.show
    display: block
  +mobile()
    display: none
  .tagcloud-taglist
    width: 100%
    margin-top: 4em
    padding: 0 4em
    +flex-wrapper(row)
      flex-wrap: wrap
    .tagcloud-tag
      margin: yard (yard*2)

  .tagcloud-postlist
    display: none
    padding: 0 6em
    margin: (yard*4) 0
    h2
      color: $theme-color-main
    &.active
      display: block
    .tagcloud-post
      user-select none
      margin-left: (yard*3)
      line-height: 2
      transition-sign(color)
      a
        color: inherit
        text-decoration: none
      &:hover
        color: $theme-color-hover
    .tagcloud-posttime
      color: $theme-text-color-desc
      &:after
        content: ' Â· '
