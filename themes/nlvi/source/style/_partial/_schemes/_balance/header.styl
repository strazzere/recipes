.header
  position: fixed
  top: 0
  bottom: 0
  left: 0
  z-index: 9
  height: 100%
  width: 300px
  headerStyle()
  transition-sign()
  +mobile()
    display: none
  .header-wrapper
    width: 100%
    height: 100%
    display: flex
    flex-flow: column nowrap
    align-items: center
  .logo
    flex: 0 0 30%
    display: flex
    align-items: center
    user-select: none
    font-size: 42px
    font-family: $header-fonts
    a
      color: inherit
      text-decoration: none
      font-weight: 100
    span
      display: block
      text-align: span
  #subtitle
    opacity: 1
    position: absolute
    margin-top: (yard/2)
    font-size: 12px
    text-align: center
    width: 100%
    margin-top: (yard*2)
    font-family: $normal-fonts
  .logo-inner
    position: relative
    width: 100%
    max-width: 100%
    span:hover+#subtitle
      opacity: 1
  .main-nav
    flex: .7
    padding: 0 (yard*2)
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

  .main-nav-list
    list-style: none
    padding: 0
    .menu-item
      margin: (yard*2) 0
      text-align: center
      a
        color: $theme-text-color-main
        font-size: inherit
        &:hover
          color: $theme-color-link
  &.melt
    opacity: 0
    transition-sign(opacity)
  &.show_toc
    opacity: 0.5
    cursor: pointer
    transform: translateX(-200px)
    box-shadow: 0 0 16px mix(#fff, $theme-color-main, 50%)
